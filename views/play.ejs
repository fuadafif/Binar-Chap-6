<!DOCTYPE html>
<html lang="en">

<head>
  <title>Game Rock Paper Scissor</title>

  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />
</head>

<body>
  <!-- Bagian Navbar -->
  <div class="container-fluid mt-3">

    <!-- Baris navbar -->
    <div class="row align-items-center">

      <!-- tombol kembali -->
      <div class="col-1 fs-1 fw-bolder text-end custom-back-button">
        <a href="/index" class="text-reset text-decoration-none">
          <!-- gunakan "&lt;" bukan "<" karena "<" adalah karakter untuk membuat element -->
          &lt;
        </a>
      </div>

      <!-- logo -->
      <div class="col-1 text-center">
        <img src="/img/logo-play.png" class="custom-logo" alt="logo" />
      </div>

      <!-- judul game -->
      <div class="col fs-2 fw-bold custom-game-title">
        ROCK PAPER SCISSOR
      </div>

    </div>
  </div>

  <!-- rock-paper-scissor Game -->
  <div class="container text-center custom-game-section">

    <!-- Baris 1 (PLAYER-COM) -->
    <div class="row my-3 justify-content-center align-items-center">

      <div class="col-2 fs-4 fw-bold custom-game-player-name">
        PLAYER 1
      </div>

      <div class="col-2">
      </div>

      <div class="col-2 fs-4 fw-bold custom-game-player-name">
        COM
      </div>

    </div>

    <!-- Baris 2 (BATU) -->
    <div class="row my-5 justify-content-center align-items-center">

      <div class="col-2 custom-choice-background align-items-center" id="player-batu">
        <img class="custom-choice" src="/img/batu.png" alt="player-batu"/>
      </div>

      <div class="col-2">
      </div>

      <div class="col-2 custom-choice-background" id="com-batu">
        <img class="custom-choice" src="/img/batu.png" alt="com-batu"/>
      </div>

    </div>

    <!-- Baris ke 3 pilhan kertas -->
    <div class="row my-5 justify-content-center align-items-center">

      <div class="col-2 custom-choice-background" id="player-kertas">
        <img class="custom-choice" src="/img/kertas.png" alt="player-kertas"/>
      </div>

      <div class="col-2 mx-2 fw-bold custom-vs-background custom-vs-text" id="vs">
        VS
      </div>

      <div class="col-2 custom-choice-background" id="com-kertas">
        <img class="custom-choice" src="/img/kertas.png" alt="com-kertas"/>
      </div>

    </div>

    <!-- Baris ke 4 pilihan gunting -->
    <div class="row my-5 justify-content-center align-items-center">

      <div class="col-2 custom-choice-background" id="player-gunting">
        <img class="custom-choice" src="/img/gunting.png" alt="player-gunting"/>
      </div>

      <div class="col-2">
      </div>

      <div class="col-2 custom-choice-background" id="com-gunting">
        <img class="custom-choice" src="/img/gunting.png" alt="com-gunting"/>
      </div>

    </div>

    <!-- Baris ke 4 tombol reset -->
    <div class="row my-5 justify-content-center align-items-center">

      <div class="col-2">
      </div>

      <div class="col-2" id="reset">
        <img class="custom-choice" src="/img/refresh.png" alt="refresh"/>
      </div>

      <div class="col-2">
      </div>

    </div>

  </div>
  </div>

  <!-- Javascript -->
  <script src="/js/play.js"></script>
</body>

</html>